@import "../../html-view/index.wxss";
span, p, view {
  padding: 0;
  margin: 0;
  outline:0;
  line-height: 1.2; 
}

.detail-head{
  padding: 40rpx 35rpx;
}

.detail-head-title{
  font-size: 40rpx;
  color: #000000;
  letter-spacing: 0;
  padding-right:15rpx;
  font-weight:500;
}

.detail-head-type{
  font-size: 26rpx;
  color: #888888;
  letter-spacing: 0;
  padding-right:15rpx;
  margin-top:12px; 
  /* line-height: 25px;  */
}

.detail-head-salary{
  font-size: 28rpx;
  color: #FF5A5A;
  letter-spacing: 0;
  margin-top: 24rpx;
  /* padding: 20rpx 0rpx 10rpx 0rpx;  */
  /* line-height: 36px; */
}

.detail-head-item{
  margin-top: 22rpx;
  overflow: hidden;
}

.detail-head-wel{
  float: left;
  font-size: 22rpx;
  color: #8F8F8F;
  letter-spacing: 0;
  padding: 2px 5px 1px 5px;
  margin-bottom:10rpx;
  margin-right: 10rpx;
  height:15px;
  line-height:15px;
}

.address-head{
  padding:0rpx  35rpx;
}

.address-head-list{
  text-align: left;
  padding-top:40rpx;

}

.address-head-list-font{
  font-size: 36rpx;
  color: #000000;
}

.detail-foot{
  width: 100%;
  height: 100rpx;
  position:fixed;
  z-index:99;
  bottom: 0px;
  box-shadow: 0 -5px 12px 0 rgba(217,226,233,0.50);
}

.detail-foot-isPhoneX{
  padding-bottom: 34px;
  background:#fff;
}

.detail-foot-right{
  width: 67%;
  float: left;
  background: #FF552E;
  font-size: 30rpx;
  color: #FFFFFF;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}

.detail-foot-left-bton-icon{
  display: block;
  background: url("//img.58cdn.com.cn/job/xcx/qiyehao/sprites.png") no-repeat;
  background-size: 57px 241px;
  background-position: -11px -215px ;
	width: 17px;
	height: 19px;
  margin: 0 auto;
  margin-top:15rpx;
  margin-bottom: 4px;
}

.detail-foot-left{
  font-size: 24rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: center;
  float: left;
  background: #fff;
  height: 100rpx;
  width: 33%;
  border-radius: 0px;
  /* border-top: 1px solid #DDDDDD; */
  /* padding-bottom: 14px; */
}

.detail-foot-left-bton{
 height: 100rpx;
 width: 33%;
 position: absolute;
 top: 0px;
 opacity: 0;
}

.left_title{
  display: inline-block;
}

/*详细地址*/
.detail-content{
  background: url("//img.58cdn.com.cn/job/xcx/qiyehao/map.png") no-repeat;
  width: 750rpx;
  height: 184rpx;
  background-size: 750rpx 184rpx;
  display:flex;
  justify-content:center;
  align-items:center;
  margin-top:50rpx;
}

.detail-content-address{
  width: 90%;
  background: #FFFFFF;
  box-shadow: 0 4px 10px 0 rgba(0,0,0,0.03);
  border-radius: 11rpx;
  margin: 0px 35rpx;
  padding: 17px 39px 13px 39px;
  position: relative
}

.detail-content-address-icon{
  background: url("//img.58cdn.com.cn/job/xcx/qiyehao/sprites.png") no-repeat;
  background-size: 57px 241px;
  background-position: -31px -194px ;
  width:13px;
  height:13px;  
  display: inline-block;
  position: absolute;
  left:15px;
  top:26px;
}

.detail-content-address-sq{
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.detail-content-address-detail{
  font-size: 26rpx;
  color: #8F8F8F;
  line-height: 25px;
}

.work-describe{
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  padding-bottom: 150rpx;
  padding-top: 40rpx;
}

